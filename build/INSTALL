#!/bin/bash
pwd=`pwd`
rm /usr/share/applications/usr_bin_jdt.desktop
echo -e \
"[Desktop Entry]\n"\
"Encoding=UTF-8\n"\
"Type=Application\n"\
"Name=Java Developer Tools\n"\
"Comment=Java Developer Tools written by Benjamin Kaiser\n"\
"Icon=$pwd/icon.png\n"\
"Exec=/usr/bin/java -jar $pwd/Java\ Dev\ Tools.jar\n"\
"Terminal=false\n"\
"Categories=Development;Java;" \
>> /usr/share/applications/usr_bin_jdt.desktop